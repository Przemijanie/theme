{#
/**
 * @file
 * Default theme implementation to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 *
 * @ingroup themeable
 */
#}
{% if content %}
  <div class="bg-white primary-menu-container sticky top-0 lg:z-[2] z-[1] shadow-[0px_3px_0px_0px_rgba(0,0,0,0.1)]">
  <div{{ attributes }} class="twig-primary-menu
  bg-[#fff] pb-[10px] pt-0 px-[15px] sticky top-0 lg:z-[2] mx-auto 
  flex flex-row justify-between 
  lg:flex-row lg:py-[20px]
  xl:container xl:px-[60px]
  ">
    {{ content }}
  </div>
</div>
{% endif %}

